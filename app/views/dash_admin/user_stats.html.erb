                    <option value="<%= u.id %>" data-link="<%= dash_admin_compare_user_stats_path(@team.id, @user.id, u.id) %>">
                         <%= u.fname %> <%= u.lname %>
                    </option>
                    <% end %>
            <% end %>
        </select>
        
        </div>
