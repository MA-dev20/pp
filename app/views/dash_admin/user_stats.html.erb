    <% @user_ratings = @user_rating_criteria.select { |rating| (!rating.name.start_with? 'change') && (rating.name != 'ges')} %>
    <div class="rating-overview">
        <% user_rating_ges = @user_rating_criteria.select { |rating| rating.name == 'ges'}.first %>
        <div class="karte rating-block active" id="ges">
            <div class="icon-circle">
                <i class="fas fa-star"></i>
            </div>
            <% rating_value = user_rating_ges.value.present? ? user_rating_ges.value : 0 %>
            <div>
                <div class="inner-content text-center" style="margin: 0.8vh auto 0;">
                    <div class="right-border">
                        <div class="c100 p<%= rating_value %> center" style="font-size: 12vh;">
                            <span class="rating-1"><%= user_rating_ges.value.present? ? ((user_rating_ges.value / 10.0 == 10.0) ? '10' : (user_rating_ges.value / 10.0)) : '0.0' %></span>
                            <div class="slice"><div class="bar"></div><div class="fill"></div></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <label>Gesamt</label>
            <% change_rating = @user_rating_criteria.find_by_name("change_ges") %>
            <% if change_rating.value.present? %>
            <% if change_rating.value > 0 %>
                <div class="change up">
                    <i class="fas fa-caret-up"></i>
                    <%= (change_rating.value / 10.0).round(1) %>
                </div>
            <% elsif change_rating.value < 0 %>
                <div class="change down">
                    <i class="fas fa-caret-down"></i>
                    <%= (change_rating.value / 10.0).round(1) %>
                </div>
            <% else %>
                <div class="change equal">
                    <i class="fas fa-equals"></i>
                    <%= (change_rating.value / 10.0).round(1) %>
                </div>
            <% end %>
            <% end %>
        </div>
        <% @user_ratings.each_with_index do |user_rating, index| %>
            <div class="karte rating-block" id="<%= user_rating.name %>">
                <div class="icon-circle">
                    <i class="fas fa-star"></i>
                </div>
                <% rating_value = user_rating.value.present? ? user_rating.value : 0 %>
                <div>
                    <div class="inner-content text-center" style="margin: 0.8vh auto 0;">
                        <div class="right-border">
                            <div class="c100 p<%= rating_value %> center" style="font-size: 12vh;">
                                <span class="rating-1"><%= user_rating.value.present? ? ((user_rating.value / 10.0 == 10.0 ? '10' : (user_rating.value / 10.0)))  : '0.0' %></span>
                                <div class="slice"><div class="bar"></div><div class="fill"></div></div>
                            </div>
                        </div>
                    </div>
                </div>
                <label><%= user_rating.name == 'ges' ? 'Gesamt' : user_rating.name %></label>
                <% change_rating = @user_rating_criteria.find_by_name("change_#{user_rating.name}") %>
                <% if change_rating.value.present? %>
                <% if change_rating.value > 0 %>
                    <div class="change up">
                        <i class="fas fa-caret-up"></i>
                        <%= (change_rating.value / 10.0).round(1) %>
                    </div>
                <% elsif change_rating.value < 0 %>
                    <div class="change down">
                        <i class="fas fa-caret-down"></i>
                        <%= (change_rating.value / 10.0).round(1) %>
                    </div>
                <% else %>
                    <div class="change equal">
                        <i class="fas fa-equals"></i>
                        <%= (change_rating.value / 10.0).round(1) %>
                    </div>
                <% end %>
                <% end %>
            </div>
        <% end %>
    </div>

