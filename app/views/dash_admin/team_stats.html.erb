<section id="dash_stats" class="dash_stats-head dash-stats-set">
    
     <div class="head">
         <%= render partial: 'select_team_user_dropdown', locals: {users: @users, teams: @teams, user: @user,team: @team, teams_page: true} %>
    </div>
    
    <div class="stats_overview">
        <% if @rating.ges < 33 %>
