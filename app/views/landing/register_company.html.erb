<section class="banner_registeration">

<div class="container">
    <%= link_to image_tag("main/logo1.png"), root_path, class: 'logo_reg' %>
    <div class="row">
        <div class="col-lg-7">
            <div class="capt-text">
                <h2>Das Gamification-Tool für dein Unternehmen</h2>
