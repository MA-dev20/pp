<section class="form-main">

<div class="container">
<div class="row">
<div class="col-lg-6">
   
    <div class="form-wrapper">

    <!-- Login Section -->

    <h1 class="caption">Login</h1>
    <%= form_for(:session, url: login_coach_path) do |f| %>
        <div class="form">
            <div class="form-group">
                <label for=""> E-mail</label>
                <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
                <label for=""> Passwort</label>
                <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group text-center">
                <a href="#" class="for_p">Passwort vergessen?</a>
            </div>
            <div class="form-group text-center border_btm">
                <%= f.submit 'Login', class: 'btn btn-default' %>
            </div>
        </div>
    <% end %>

    <!-- Register Section -->
    
    <h1 class="caption">Registrieren</h1>
    <%= form_for(:admin, url: new_company_path) do |f| %>
        <div class="form register">
            
            <div class="form-group">
                <label for=""> Anrede*</label>
                <div class="form-row">
                    <div class="custom-control custom-radio">
                        <%= f.radio_button :male, true, class: 'custom-control-input' %>
                        <label class="custom-control-label" for="admin_male_true">Herr</label>
                    </div>
                    <div class="custom-control custom-radio ml-70">
                        <%= f.radio_button :male, false, class: 'custom-control-input' %>
                        <label class="custom-control-label" for="admin_male_false">Frau</label>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label for=""> Vorname*</label>
                <%= f.text_field :fname, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <label for=""> Nachname*</label>
                <%= f.text_field :lname, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <label for=""> Straße und Hausnummer*</label>
                <%= f.text_field :street, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <label for=""> PLZ*</label>
                <%= f.number_field :zipcode, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <label for=""> Stadt*</label>
                <%= f.text_field :city, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <label for=""> E-Mail*</label>
                <%= f.email_field :email, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <label for=""> Passwort*</label>
                <%= f.password_field :password, class: 'form-control' %>
            </div>
            
            <div class="form-group">
                <label for=""> Wie viele Mitarbeiter<br>hat dein Unternehmen?</label>
                <%= f.number_field :employees, class: 'form-control' %>
            </div>
            
            <div class="form-group text-center">
                <%= f.submit 'Jetzt anmelden', class: 'btn btn-default' %>
            </div>
            
        </div>
    <% end %>
    </div>
</div>

