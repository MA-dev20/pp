<section id="navbar">
    <%= link_to image_tag('landing/logo.png'), root_path, class: 'logo'%>
    <div class="navbar-links" id="navLinks">
        <div class="link">
            <%= link_to 'Blog', blog_path %>
        </div>
        <div class="link">
            <%= link_to 'FAQ', root_path(anchor: 'faq') %>
        </div>
        <div class="link">
            <%= link_to 'Kontakt', contact_path %>
        </div>
        <div class="link">
        	<i class="login-link" onclick="showLoginModal()">Login</i>
        </div>
    </div>
    <div class="login">
       	<i class="login-link" onclick="showLoginModal()">Login</i>
    </div>
    <div class="navbar-mobile" onclick="showNavLinks()">
        <i class="fas fa-bars"></i>
    </div>
</section>
<div id="content">
<% if @blog %>
	<div class="blog_card">
		<%= image_tag @blog.image? ? @blog.image.url : '' %>
		<h1><%= @blog.title %></h1>
		<span><%= @blog.created_at.strftime("%d.%m.%Y") %></span>
		<div class="text">
			<% @blog.text.split(%r{\r\n}).each do |be| %>
				<%= be %> <br>
			<% end %>
		</div>
	</div>
<% end %>
<section id="blog">
	<% @blogs.each do |b| %>
	<div class="card">
		<%= image_tag b.image? ? b.image.url : '' %>
		<h3>
			<%= b.title %>
			
		</h3>
		<span><%= b.created_at.strftime('%d.%m.%Y') %></span>
		<div class="text">
			<% b.text.split(%r{\r\n}).each do |bt| %>
				<%= bt %><br>
			<% end %>
		</div>
		<%= link_to 'mehr lesen', blog_path(blog: b.id) %>
	</div>
	<% end %>
</section>
</div>