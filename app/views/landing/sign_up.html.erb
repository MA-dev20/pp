 
<div class="verification-canvas py-4 d-flex align-items-center justify-content-center register-page">
  <div class="container register-container">
    <!----------------<div class="text-center">
      <a href="#" class="register-logo d-inline-block"><%= image_tag ("logo.png") ,alt:"IMG"%></a>
    </div> ----->
    <div class="row">
      <div class="col-12">
        <%= form_for(@admin, url: update_admin_path(v_id: @admin.vid_token)) do |f| %>
          <!-------<h1 class="form-heading mb-5 pb-2">registrieren</h1> ------->
          <div class="form-main-canvas">
            <div class="form-group">
              <label for=""> Vorname</label>
              <%= f.text_field :fname, class: 'form-control', autocomplete: "off",required: true , :maxlength => 16, :minlength => 3%>
            </div>

            <div class="form-group">
              <label for=""> Nachname</label>
              <%= f.text_field :lname, class: 'form-control', autocomplete: "off",required: true , :maxlength => 16, :minlength => 3%>
            </div>  
            <div class="form-group">
              <label for=""> Passwort</label>
              <%= f.password_field :password, id:"password", class: 'form-control', autocomplete: "off", required: true , value: "" , :maxlength => 16, :minlength => 6%>
            </div>

            <div class="form-group">
              <label for=""> Passwort wiederholen</label>
              <%= f.password_field :password_confirm, id:"password", class: 'form-control', autocomplete: "off", required: true , value: ""  , :maxlength => 16, :minlength => 6 %>
            </div>

            <!------------<div class="form-group">
              <label for=""> Unternehmensname*</label>
              <%= f.text_field :company_name, class: 'form-control', required: true %>
            </div>

            <div class="form-group">
              <label for=""> Mitarbeiteranzahl*</label>
              <%= f.number_field :members, class: 'form-control', required: true %>
            </div>--->
                
            <div class="form-group text-center pt-2 px-md-5">
              <%= f.submit 'Weiter', class: 'btn btn-green' %>
            </div>
            
          </div>   
        <% end %>
      </div>
    </div>
  </div>
</div>
