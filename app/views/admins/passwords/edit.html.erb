<section id="contact">
    <h1>Passwort Ã¤ndern!</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "modal-form mt-2"  }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <div class="form-group ">
            <%= f.password_field :password,class: 'form-field', autofocus: true, autocomplete: "new-password", placeholder: "Password" %>
        </div>
        <div class="form-group">
            <%= f.hidden_field :reset_password_token %>
            <%= f.password_field :password_confirmation, autocomplete: "off" ,class: 'form-field' , placeholder: "Confirm password"%>
        </div>
        <div class="form-group center">
            <%= f.submit 'Change password!', class: 'btn btn-green' %>
        </div>
    <% end %>
</section>
