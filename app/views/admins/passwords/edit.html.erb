<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "modal-form mt-2"  }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <div class="form-group ">
        <%= f.password_field :password,class: 'form-control mr-sm-3', autofocus: true, autocomplete: "new-password", placeholder: "Password" %>
        <br>
        <%= f.hidden_field :reset_password_token %>
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class: 'form-control mr-sm-3' , placeholder: "Confirm password"%>
        <br>
        <%= f.submit 'Change password!', class: 'btn btn-green mt-3 mt-md-0 w-100' %>
    </div>
<% end %>