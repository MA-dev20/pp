<section id="navbar">
    <%= link_to image_tag('landing/logo.png'), root_path, class: 'logo'%>
    <div class="navbar-links" id="navLinks">
        <div class="link">
            <%= link_to 'Blog', blog_path %>
            <div class="line"></div>
        </div>
        <div class="link">
            <%= link_to 'FAQ', root_path(anchor: 'faq') %>
            <div class="line"></div>
        </div>
        <div class="link">
            <%= link_to 'Kontakt', contact_path %>
            <div class="line"></div>
        </div>
        <div class="link">
            <%= link_to 'Login', root_path(anchor: 'login'), class: 'login-link' %> 
        </div>
        <div class="link">
            <%= link_to 'Get early access!', contact_path, class: 'btn btn-white' %>
        </div>
    </div>
    <div class="login">
        <%= link_to 'Login', root_path(anchor: 'login'), class: 'login-link' %>
    </div>
    <div class="navbar-mobile" onclick="showNavLinks()">
        <i class="fas fa-bars"></i>
    </div>
</section>
<section id="contact">
    <h1>Login</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
            <%= f.label 'E-Mail' %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "Gib deine E-Mail ein!", autocomplete: "email", class: 'form-field' %>
        </div>

        <div class="form-group">
            <%= f.label 'Passwort' %><br />
            <%= f.password_field :password, placeholder: "Gib dein Password ein!", autocomplete: "current-password", class: 'form-field' %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label "Erinnerre dich an mich" %>
        </div>
        <% end %>

        <div class="form-group center">
            <%= f.submit "Log in", class: 'btn btn-green' %>
        </div>
    <% end %>
    <%= render "admins/shared/links" %>
</section>
