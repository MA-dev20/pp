<section id="content">
  <div class="head">
    <% if @user == @cur_user %>
      <%= @user.fname %>
    <% else %>
      <%= @cur_user.fname %> <% @cur_user.lname %>
    <% end %>
  </div>
  <div class="middle">
    <%= image_tag @cur_user.avatar.quad.url, class: 'mid-img green' %>
  </div>
  <div class="bottom">
    <% if @user == @cur_user %>
      du bist dran!
    <% else %>
      ist dran!
    <% end %>
  </div>
</section>
<div id='game_channel' data-game-id="<%= @game.id %>"></div>
