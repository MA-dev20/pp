<section id="content">
    <div class="head">
        <div class="h100">Hier ist die Bewertung!</div>
    </div>
    <div class="middle">
       <%= image_tag @cur_user.avatar.quad330.url || 'defaults/wolf.jpg', class: 'mid-img green' %>
    </div>
</section>
<div id="redirect">
    <%= render partial: 'state' %>
</div>

<script>    
    $(document).ready(
        function() {
            setInterval(function() {
                if($('#redirect').text().trim() == 'rating') {
                    $('#redirect').load('rating #redirect');
                } else if($('#redirect').text().trim() == 'turn') {
                    window.location.replace('<%= gmu_turn_path %>');
                } else if($('#redirect').text().trim() == 'bestlist') {
                    window.location.replace('<%= gmu_bestlist_path %>');
                } else if($('#redirect').text().trim() == 'replay') {
                    window.location.replace('<%= gmu_replay_path(@user, @game) %>');
                } else if($('#redirect').text().trim() == 'ended') {
                    window.location.replace('<%= gmu_ended_path(@user, @game) %>');
                } else {
                    window.location.replace('<%= gmu_choose_path %>');
                }
            }, 2000);
        }
    );
</script>