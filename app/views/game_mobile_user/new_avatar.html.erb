<section id="content">
  <% if @user.avatar? %>
  <div class="head">
      <%= render partial: 'game_mobile_admin/header' , locals: {can: false}%>

      <div class="h100">Wow!</div>
      <div class="h50">Dr端cke auf "weiter" oder auf das <br> Bild f端r einen neuen Versuch!</div>
  </div>
  <% else %>
  <div class="head">
      <%= render partial: 'game_mobile_admin/header' , locals: {can: false}%>
    
      <div class="h100">Bild hinzuf端gen!</div>
      <div class="h50">Dr端cke das Plus, um ein Foto zu machen oder ein bestehendes Bild von dir hochzuladen.</div>
  </div>
  <% end %>
  <div class="middle">
    <%= form_for(:user, url: gmu_new_avatar_path) do |f| %>
      <% if @user.avatar? %>
        <label for="user_avatar" id="user_pic">
          <%= image_tag @user.avatar.quad.url, class: 'mid-img blue' %>
        </label>
        
       
        <div class="add">
          <i class="fas fa-check-circle"></i>
        </div>

        
      <% else %>
        <label for="user_avatar" id='user_pic'>
          <%= image_tag 'game/plus.png', class: 'mid-img pulse' %>
        </label>
      <% end %>
      <%= f.file_field :avatar, onchange: 'auto()' %>
      <%= f.submit '', style: 'display:none'%>
    <% end %>
  </div>
  <% if @user.avatar? %>
    <%= form_for(:user, url: gmu_new_turn_path, method: 'get') do |f| %>

    <div class="bottom bottom-play">
      <%= render partial: 'toggle_for_rate' %>
      <%= f.submit 'weiter!', class: 'link pulse' %>
      <% end %>
    </div>
  <% end %>
</section>

<script>
function auto() {
    $('form').submit();
    $("form").replaceWith("<div class='spinner spinner1'></div>");
}
</script>