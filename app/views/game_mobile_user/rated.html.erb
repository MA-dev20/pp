<%= render partial: 'game_mobile_admin/header' , locals: {can: false}%>
<% if @user == @cur_user %>
<div class="head">
    <h1 class="nunito-bold"><%= @cur_user.fname %>, du wirst bewertet!</h1>
</div>
<div class="middle">
    <%= image_tag @user.avatar.quad.url, class: 'mid-img green pulse' %>
</div>
<% else %>
<div class="head">
    <h1 class="nunito-bold">Bewertung abgegeben!</h1>
</div>
<div class="middle">
    <%= image_tag @cur_user.avatar.quad.url || 'defaults/wolf.jpg', class: 'mid-img green pulse' %>
</div>
<% end %>
