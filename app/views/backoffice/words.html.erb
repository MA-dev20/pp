<% if @admin %>
<h1><%= @admin.fname %> <%= @admin.lname %>'s Catchwords</h1>
<% else %>
<h1>Peters Catchwords</h1>
<% end %>

<div class="table">
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Erstellt</th>
				<th>Worte</th>
			</tr>
		</thead>
		<tbody>
			<% @words.each do |g| %>
			<tr>
				<td onclick="redirect(<%= g.id %>)"><%= g.name %></td>
				<td onclick="redirect(<%= g.id %>)"><%= g.created_at.strftime('%d.%m.%Y') %></td>
				<td onclick="redirect(<%= g.id %>)"><%= g.words.count %></td>
				<td><%= link_to '', destroy_basket_path(g.id), class: "far fa-trash-alt" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<script>
function redirect(word_id) {
	<% if @admin %>
	  var URL = "<%= backoffice_words_url(@admin) %>";
	<% else %>
	  var URL = "<%= backoffice_words_noadmin_url %>";
	<% end %>
	location.replace(URL + '/' + word_id);
}
</script>