<%= form_for admin, as: :admin, url: admin.new_record? ? backoffice_admin_new_path : update_backoffice_admin_path(admin) do |f| %>
        <div class="form-block">
            <div class="row">
                <div class="col-12 col-md-6 pr-md-4">
                    <div class="form-group">
                        <label>Vorname</label>
                      <%= f.text_field :fname, class: 'form-control', autocomplete: "off",required: true , :maxlength => 16, :minlength => 3%>
                </div>
                </div>
                <div class="col-12 col-md-6 pl-md-4">
                    <div class="form-group">
                        <label>Nachname</label>
                      <%= f.text_field :lname, class: 'form-control', autocomplete: "off",required: true , :maxlength => 16, :minlength => 3%>
                </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 pr-md-4">
                    <div class="form-group">
                      <label for=""> Unternehmensname</label>
                      <%= f.text_field :company_name, class: 'form-control', autocomplete: "off", required: true, :maxlength => 30%>
                    </div>
                </div>
                <div class="col-12 col-md-6 pl-md-4">
                    <div class="form-group">
                        <label>Email</label>
                        <%= f.email_field :email, class: "form-control email-field", required: true %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 pr-md-4">
                    <div class="form-group">
                        <label>Passwort</label>
                      <%= f.password_field :password, class: 'form-control', autocomplete: "off", value: "" , :maxlength => 16, :minlength => 6%>
                </div>
                </div>
                <div class="col-12 col-md-6 pl-md-4">
                    <div class="form-group">
                        <label>Passwort wiederholen</label>
                      <%= f.password_field :password_confirm, class: 'form-control', autocomplete: "off" , value: ""  , :maxlength => 16, :minlength => 6 %>
                </div>
                </div>
            </div>
        </div>
        <%= f.submit admin.new_record? ? 'submit' : 'update', class: 'btn btn-green mt-3 mt-md-0 ml-0' %>
    <% end %>