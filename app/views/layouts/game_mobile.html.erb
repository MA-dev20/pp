<!DOCTYPE html>
<html lang="de">
  <head>
    <title>Peter Pitch</title>
    <%= favicon_link_tag 'wolfhead-tab.png', rel: 'icon', type: 'image/png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'game_mobile/main', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'game_mobile/main' %>
    <meta property="og:url"           content="http://www.peterpitch.com" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="Peterpitch" />
    <meta property="og:description"   content="Das erste Gamification Tool" />
    <meta property="og:image"         content="<%= image_url('defaults/wolf.jpg') %>" />
    <meta property="og:site_name"     content="Peterpitch" >
    <meta property="og:locale"        content="de_DE" />
    <%= yield :meta %>
  </head>

<body>
    <section id="content">
    <% if (@game && @user) || (@game && @admin) %>
        <%= yield %>
        <div id='game_channel' data-game-id="<%= @game.id %>"></div>    
    <% else %>
        <%= yield %>
    <% end %>
    </section>
    <section id="landscape">
    	<div class="mid">
    	<i class="fas fa-redo"></i>
    	<div class="text">Bitte drehe dein Handy!</div>
    	</div>
    </section>
  </body>
  <script type="text/javascript">
      setTimeout(function() {$(".alert" ).fadeOut(3000);}, 5000)
      function runModalJS(){
        $(".modal-email .close").on('click', function(e){
            let id = $(this).attr('data-id');
            $(`#myModalAction${id}`).hide()
        })
      }
  </script>
</html>
