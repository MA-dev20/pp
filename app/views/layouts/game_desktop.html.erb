<script type="text/javascript">
    function runModalJS(){
        $("#btn-accept").on("click", function(e){
            e.preventDefault();
            var $href = $(this).attr("href")
            $.ajax({
                url: $href,
                done: function(){
                    $("#myModalAction").hide()
                }
            })
        })
        $("#btn-reject").on("click", function(e){
            e.preventDefault();
            var $href = $(this).attr("href")

            $.ajax({
                url: $href,
                done: function(){
                    $("#myModalAction").hide()
                }
            })
        })
        $(".modal-email .close").on('click', function(e){
            let id = $(this).attr('data-id');
            $(`#myModalAction${id}`).hide()
        })
    }
    
</script>