<!DOCTYPE html>
<html lang="de">
<head>
    <title>Peterpitch</title>
    <meta name="theme-color" content="#1dacf1"/>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'game_desktop/main', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'game_desktop/main'%>
    <meta property="og:url"           content="http://www.peterpitch.com" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="Peterpitch" />
    <meta property="og:description"   content="Das erste Gamification Tool" />
    <meta property="og:image"         content="<%= image_url('defaults/wolf.jpg') %>" />
    <meta property="og:site_name"     content="Peterpitch" >
    <meta property="og:locale"        content="de_DE" />
</head>

<body>
   <div id="play-contant">
    <%if @game.state != 'play' %>
       <section id="navbar" class="nunito-extrabold">
           <%= image_tag 'logo-m.png', class: 'logo' %>
           - <%= @game.team.name %> -
           <% if @handy %>
           <%= image_tag 'game/handy_green.png', class: 'handy' %>
           <% elsif current_admin.logo.present? %>
           <%= image_tag current_admin.logo.url, class: 'company' %>
           <% end %>
       </section>
   <% end %>

    <section id="content">
        <div id='game_channel' data-game-id="<%= @game.id %>">
        <div id='admin' data-admin-id="<%= current_admin.id %>"></div>
        <%= yield %>
        </div>
    </section>
    </div>
    <%= render partial: 'shared/user_accept_modal' %>
</body>
</html>
<script type="text/javascript">
    function runModalJS(){
        $("#btn-accept").on("click", function(e){
            e.preventDefault();
            var $href = $(this).attr("href")
            $.ajax({
                url: $href,
                done: function(){
                    $("#myModalAction").hide()
                }
            })
        })
        $("#btn-reject").on("click", function(e){
            e.preventDefault();
            var $href = $(this).attr("href")

            $.ajax({
                url: $href,
                done: function(){
                    $("#myModalAction").hide()
                }
            })
        })
        $(".modal-email .close").on('click', function(e){
            let id = $(this).attr('data-id');
            $(`#myModalAction${id}`).hide()
        })
    }
    
</script>