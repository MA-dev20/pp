<div class="head">
    <%= render partial: 'header' , locals: {can: false}%>
    <h1>Bitte logge dich ein!</h1>
</div>
<%= form_for(:admin, url: gma_start_path, html: {autocomplete: 'off'}) do |f| %>
<div class="middle">
    <div class="row">
        <div class="col-12">
            <%= f.password_field :password, placeholder: 'Passwort', class: 'form-field', onchange: 'enterName()' %>
            <%= f.hidden_field :email, class: 'form-field',value: params[:email]  %>
        </div>
    </div>
</div>
<div class="bottom">
    <%= link_to "weiter!", '', class: 'link', id: 'fake' %>
    <%= f.submit 'weiter!', class: 'link pulse', id: 'summit', style: 'display: none' %>
</div>
<% end %>

<script>
    function enterName() {
        $('#fake').hide();
        $('#summit').show();
    }
</script>