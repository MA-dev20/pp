<section id="content">
    <div class="head">
        Alle online?
    </div>
    <div class="middle">
        <%= image_tag 'game/wolf_button.png', class: 'mid-img green' %>
    </div>
    <div class="bottom">
       <%= link_to 'starten!', gma_redirect_path %>
    </div>
</section>
<div id="redirect">
    <%= render partial: 'state' %>
</div>


<script>
    
    $(document).ready(
        function() {
            setInterval(function() {
                if($('#redirect').text().trim() == 'wait') {
                    $('#redirect').load('wait #redirect')
                } else {
                    window.location.replace('<%= gma_choose_url %>');
                }
            }, 2000);
        }
    );
</script>