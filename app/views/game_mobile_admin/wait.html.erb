<section id="count_channel" data-game-id="<%= @game.id %>">
<%= render partial: 'header' , locals: {can: false}%>
<div class="head">
    <h1 class="nunito-bold">Alle beigetreten?</h1>
</div>
<div class="middle">
    <% if @admin.avatar? %>
        <%= image_tag @admin.avatar.quad.url, class: 'mid-img green pulse' %>
    <% else %>
        <div class="mid-img green">
            <%= image_tag 'game/wolf_button.png', class: 'wolf pulse' %>
        </div>
    <% end %>
</div>
<div class="bottom">
    <%
      url = (@game.replay ? gma_choose_path :  (@game.youtube_url.present? ? gma_youtube_path : gma_intro_path))
    %>
    
    <%= link_to "Los geht's!", url, class: 'nunito-regular' %>
</div>
</section>
<%= audio_tag('wait/ringdoor.mp3', id: 'ringdoor', muted: @game.mute_sound) %>

<script type="text/javascript">
    <% @pending_users.each do |user| %>
        modal = '<div style="display: none; z-index: 10000;"  class="modal modal-email" id="myModalAction<%=user.id.to_s %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"><div class="modal-dialog modal-dialog ml-3 modal-dialog-centered mr-3 mr-md-auto" role="document"><div class="modal-content"><div class="modal-header p-2"><button type="button" data-id="<%=user.id.to_s %>" class="close" data-dismiss="modal" aria-label="Close"><span class="x-btn" aria-hidden="true">&times;</span></button></div><div class="modal-body"><div class="mail-box d-flex flex-column flex-md-row align-items-md-center"><div class="mail-box-main d-flex flex-column flex-md-row align-items-md-center"><span class="req-img"><img src="<%= user.avatar.url %>"   /></span><span> <%= "#{user.fname}. #{user.lname}" %></span></div><div class="mail-btn mt-3 mt-md-0"><a class="btn btn-green btn-green-accept" data-remote=true rel="nofollow" data-method="patch" href="/game_mobile_user/accept_user/<%=user.id.to_s %>">Accept</a><a class="btn btn-green btn-green-reject" rel="nofollow" data-remote=true data-method="patch" href="/game_mobile_user/reject_user/<%=user.id.to_s %>">Reject</a></div></div></div></div></div></div>';
        // modal = '<div style="display: none; z-index: 10000;"  class="modal modal-email" id="myModalAction<%=user.id.to_s %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"><div class="modal-dialog modal-dialog ml-3 modal-dialog-centered mr-3 mr-md-auto" role="document"><div class="modal-content"><div class="modal-header p-2"><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button></div><div class="modal-body"><div class="mail-box d-flex flex-column flex-md-row align-items-md-center"><div class="mail-box-main d-flex flex-column flex-md-row align-items-md-center"><span class="req-img"><img src="<%= user.avatar.url %>"   /></span><span> <%= "#{user.fname}. #{user.lname}" %></span></div><div class="mail-btn mt-3 mt-md-0"><a class="btn btn-secondary  btn-accept" data-remote=true rel="nofollow" data-method="patch" href="/game_mobile_user/accept_user/<%=user.id.to_s %>">Accept</a><a class="btn btn-primary btn-reject" rel="nofollow" data-remote=true data-method="patch" href="/game_mobile_user/reject_user/<%=user.id.to_s %>">Reject</a></div></div></div></div></div></div>';
        $("body").append(modal)
        $('#myModalAction<%=user.id.to_s %>').show();
    <% end %>
  
    $(".close").click(function(){
        let id = $(this).attr('data-id');
        $(`#myModalAction${id}`).hide()
    })
</script>
