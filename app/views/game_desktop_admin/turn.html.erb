<%= audio_tag('turn/naechstevertriebsleiter.mp3', id: 'tag4') %>
<%= audio_tag('turn/shakkaduschaffst.mp3', id: 'tag5') %>
<%= audio_tag('turn/wow.mp3', id: 'tag6') %>

<link rel="preload" href="/assets/countdown.mp4", as="video">
<link rel="preload" href="/assets/play/intro.mp3", as="audio">
<link rel="preload" href="/assets/play/theme.mp3", as="audio">

<script>
    pick(6);
    $(document).ready(
        function() {
            setInterval(function() {
                if($('#redirect').text().trim() == 'turn') {
                    $('#redirect').load('turn #redirect');
                } else {
                    window.location.replace('<%= gda_play_url %>');
                }
            }, 2000);
        }
    );
                            
</script>