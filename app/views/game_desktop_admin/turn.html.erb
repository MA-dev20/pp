    <%= @user.fname %>, du bist dran!
</section>
<section id="middle">
   <div class="circle">
     <%= image_tag @user.avatar.quad.url, class: 'pulse' %>
    </div>
</section>
<section id="skip">
   Skip mit Leertaste
</section>
<div id="redirect">
    <%= render partial: 'state' %>
</div>
<%= audio_tag('turn/besonderescatchword.mp3', id: 'tag1') %>
<%= audio_tag('turn/glaskugel.mp3', id: 'tag2') %>
