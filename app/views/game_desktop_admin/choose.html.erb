<%= audio_tag("choose/slot.mp3", id: 'slot') %>

<script>
    document.getElementById('slot').play();
    setTimeout(function() {
        document.getElementById('slot').pause();
        window.location.replace('<%= gda_redirect_url %>');
    }, 5000);
    

</script>