<section id="gd_head_ended">
    Die Bestenliste!
</section>
<section id="gd_ended">
    <% if @user1 %>
    <div class="rate">
        <div class="line" style="width: calc( <%= @rat1 %>% - 200px ); animation-name: line1">
           <div class="text" id="text1">
            <%= @user1.fname %> <%= @user1.lname %>
            </div>
        </div>
        <div class="rating" style="left: calc( <%= @rat1 %>% - 200px ); animation-name: rat1">
            <div class="circle">
                <%= image_tag 'game/wolf_button.png', id: 'wolf1' %>
                <%= image_tag @user1.avatar.quad.url, class: 'avatar', id: 'avatar1' %>
            </div>
            <%= image_tag 'game/crown1.png', class: 'crown1' %>
            <%= image_tag 'game/polygon.png', class: 'pol', id: 'pol1' %>
            <div class="rate_ges" id='rat1'>
                <%= @rat1 / 10.0 %>
            </div>
        </div>
    </div>
    <% end %>
